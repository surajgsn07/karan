<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-800 text-white">
    <h1  class="text-center text-2xl font-bold">Create New Post - </h1>
    <hr class="opacity-30 m-2 mb-4">
    <form action="/create" method="post" enctype="multipart/form-data" class="flex flex-col mx-[auto] w-1/3 gap-10">
        <input type="file" name="filepost" id="filepost" required>
        <input type="text" name="title" id="title" class=" rounded-lg p-1 text-black" placeholder="Title" required>
        <textarea type="text" rows="6"  name="description" id="description"  class=" rounded-lg p-1 text-black" placeholder="Description" required></textarea>
        <input type="submit" value="Upload post" class="w-1/3 bg-red-600 rounded-full text-white font-semibold mx-[auto] py-1 ">
    </form>
</div>
<% include ./partials/footer.ejs %>